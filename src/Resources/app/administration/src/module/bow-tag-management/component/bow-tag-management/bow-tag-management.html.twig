{% block bow_tag_management %}
    <sw-card-view class="bow-tag-management">
        {% block bow_tag_management_content %}
            <sw-card 
                :isLoading="isLoading"
                :large="true">
                {% block bow_tag_management_content_grid %}
                    <sw-data-grid
                        :dataSource="tags"
                        :columns="columns"
                        :showSettings="true"
                        :showSelection="false"
                        :allowInlineEdit="true"
                        :showActions="true">

                        {% block bow_tag_management_grid_columns_priority %}
                            <template #column-priority="{ item }">
                                <sw-number-field
                                    :value="item.customFields ? item.customFields.bowAutoLinks.priority : 1"
                                    @change="updatePriority(item)"
                                    :min="0"
                                    :max="10"
                                    :digits="1">
                                </sw-number-field>
                            </template>
                        {% endblock %}

                        {% block bow_tag_management_grid_actions %}
                            <template #actions="{ item }">
                                <sw-context-menu-item @click="onEditTag(item)">
                                    {{ $tc('bow-tag-management.general.editTag') }}
                                </sw-context-menu-item>
                                <sw-context-menu-item @click="onViewLinks(item)">
                                    {{ $tc('bow-tag-management.general.viewLinks') }}
                                </sw-context-menu-item>
                            </template>
                        {% endblock %}
                    </sw-data-grid>
                {% endblock %}
            </sw-card>
        {% endblock %}
    </sw-card-view>
{% endblock %}
